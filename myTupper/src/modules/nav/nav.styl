@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.nav
	font-family 'TupperPRO', sans-serif !important
	font-weight 400
	position absolute
	left 0
	right 0
	top 0
	padding 20px 13px 0
	background-color $white-color
	z-index 5
	flex(column)
	&__home
		flex($jc: center)
		margin-bottom 15px
		position relative
		&_link
			link($black-color)
			position relative
	&__close
		position absolute
		left 0
		top 7px
		cursor pointer
	&__menu
		flex(column, flex-start, center)
		font-size 20px
		line-height 1.4
		&_item
			width 100%
			padding 20px 0
			position relative
			cursor pointer
			&::after
				content ''
				display block
				position absolute
				bottom 0
				left -13px
				right -13px
				background-color #E0E0E0
				height 1px
			&:last-child::after
				height 0
			&_text
				position relative
			&_wrapper
				flex($jc: space-between, $ai: center)
				text-transform uppercase
			&_active
				.nav__underline
					opacity 1
	&__underline
		position absolute
		background-color $main-color
		bottom -4px
		left 0
		right 0
		height 4px
		display inline-block
		opacity 0
		transition .3s all
		
	//--------------------------------------submenu
	
	&__submenu
		flex(column, flex-start, center)
		text-transform none
		position relative
		padding-left 20px
		padding-top 10px
		font-size 13px
		&_item
			width 100%
			padding 10px 10px 10px 0
			z-index 200
			&_wrapper
				flex($jc: space-between, $ai: center)
			&_active
				color $orange-color
	&__deepmenu
		flex(column, flex-start, center)
		text-transform none
		position relative
		padding-left 20px
		padding-top 10px
		&_item
			width 100%
			padding 8px 0
			font-size 12px
			&_text
				link($black-color)
			
@media screen and (min-width $view-port-tablet)
	.nav
		display flex!important
		opacity 1 !important
		z-index 1 !important
		position relative
		width 100%
		order 5
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		align-items stretch
		padding 20px 0 0
		&__home
			width 10%
			align-items center
			margin-bottom 3px
			justify-content flex-start
			&:hover
				.nav__underline
					opacity 1
		&__close
			display none
		&__menu
			font-size 16px
			width 90%
			flex-direction row
			justify-content space-between
			align-items center
			&_item
				width auto
				height 100%
				&::after
					display none
				&_wrapper
					height 100%
					justify-content center
				&:hover
					.nav__underline
						opacity 1
		&__submenu
			background-color $white-color
			position: absolute
			max-width 100vw
			text-transform uppercase
			box-shadow: 0 2px 3px 0 rgba(0,0,0,0.2);
			&_item
				transition .3s all
				padding-right 20px
				&:hover
					color $orange-color
		&__deepmenu
			padding-right 10px
			&_item
				&:hover
					.nav__deepmenu_item_text
						color $orange-color
				&_text
					transition .3s all
	
@media screen and (min-width $view-port-large)
	.nav
		&__menu
			font-size 20px
	
	
	