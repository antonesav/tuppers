@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.big-slider
	font-family 'TupperPRO', sans-serif !important
	&__slide
		height 421px
		padding-top 45px
	&__slide--1
		bg('../images/big_slider_1.jpg')
	&__slide--2
		bg('../images/big_slider_1.jpg')
	&__title
		color #09B3AE
		margin-bottom 20px
		max-width 100%
		width 45%
		font-size 28px
		font-weight 200
	&__link
		display inline-block
		margin-bottom 25px
		font-size 22px
		position relative
		link($red-color)
		padding-bottom 5px
		&:hover
			.big-slider__underline
				opacity 0
	&__text
		font-weight 300
		color $black-color
		width 45%
	&__underline
		underline(1px, 1px, $red-color, 1)

@media screen and (min-width $view-port-sm)
	.big-slider
		&__slide
			padding-top 55px
			height 473px
		&__title
			font-size 32px
			width 80%
		&__text
			width 80%
		
@media screen and (min-width $view-port-mob)
	.big-slider
		&__slide
			height 493px
			padding-top 60px
		&__title
			font-size 34px
			width 60%
		&__text
			width 60%
		
@media screen and (min-width $view-port-medium)
	.big-slider
		&__slide
			height 513px
		&__title
			font-size 44px
			margin-bottom 25px
			width 55%
		&__link
			font-size 24px
			margin-bottom 30px
		&__text
			width 55%
		
@media screen and (min-width $view-port-tablet)
	.big-slider
		&__slide
			height 533px
			padding-top 70px
		&__title
			font-size 54px
			margin-bottom 30px
			width 50%
		&__link
			font-size 26px
			margin-bottom 40px
		&__text
			width 50%
	
@media screen and (min-width $view-port-large)
	.big-slider
		&__slide
			height 553px
			padding-top 80px
		&__title
			font-size 64px
			margin-bottom 30px
			width 45%
		&__link
			font-size 28px
			margin-bottom 40px
		&__text
			width 45%