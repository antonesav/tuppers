@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.basket
	&__container
		padding 20px 0
		max-width 890px
		width 100%
		flex(column)
		&_top
			display none
		&_delivery
			padding 20px 0
			width 100%
			line-height 1.4
			display none
			grid-row 3
			grid-column 1
			grid-column-start 1
			grid-column-end 3
	&__box
		flex(column)
		border 1px solid $light-color
		padding 10px 12px 20px
		border-bottom none
		position relative
		&:last-child
			border-bottom 1px solid $light-color
		&_title
			font-size 16px
			margin 5px 0
			line-height 1.4
			width 100%
		&_good
			flex(column, $ai: center)
			&_text
				flex(column, $ai: center)
				width 100%
			&_img
				margin-bottom 10px
			&_vendor-code
				text-transform uppercase
				font-size 13px
				margin-bottom 10px
				margin-top 10px
				color #787878
			&_orders
				color #424242
				font-size 14px
				margin-bottom 10px
		&_price
			flex(row, space-between, center)
			&_wrapper
				flex(column)
		&_your-price
			font-size 18px
			color $red-color
			margin 5px 0
		&_count
			margin 0 auto
			width 150px
			flex(column, center, center)
			&_basket
				width 200px
				flex(column, space-between, center)
			&_wrapper
				width 100%
				align-self center
				flex($jc: space-between, $ai: center)
				padding 15px
				font-size 20px
				color $main-color
			&_minus, &_plus
				border 1px solid $main-color
				border-radius 50%
				height 28px
				width 28px
				flex($jc: center, $ai: center)
				cursor pointer
				padding-bottom 2px
				transition .3s all
				&:hover
					background-color $main-color
					color $white-color
			&_add-basket
				background-color $red-color
				color $white-color
				font-size 12px
				text-transform uppercase
				padding 10px 0
				width 100%
				text-align center
				cursor pointer
				transition .3s all
				&:hover
					background-color darken($red-color, 15%)
		&_total
			flex(row, space-between, center)
			&_basket
				position absolute
				right 12px
				top 12px
		&_text
			margin 5px 0
		&_delivery
			&_good
				width 45%
			&_code, &_price, &_count, &_total
				width calc(50% / 5)
	
@media screen and (min-width $view-port-medium)
	.basket
		&__box
			flex-direction row
			flex-wrap wrap
			justify-content space-between
			&_good
				width 100%
			&_price
				width 35%
			&_total
				width 35%
			&_count
				margin 0
				flex-direction row
				&_basket
					width 250px

@media screen and (min-width $view-port-tablet)
	.basket
		flex($ai: center, $jc: space-between)
		flex-wrap wrap
		&__container
			&_top
				flex($ai: center, $jc: space-between)
				background-color $main-color
				color $white-color
				padding 22px 40px 22px 20px
			&_delivery
				flex(column)
		&__box
			&:last-child
				border-bottom none
			&-wrapper
				border 1px solid $light-color
				border-top none
				padding 20px 0
			border none
			padding 20px 40px 20px 20px
			&_title
				margin 0
			&_good
				width 50%
				flex-direction row
				&-title
					width 50%
					padding-right 10px
					padding-left 10px
				&_img
					margin-bottom 0
				&_text
					height 100%
					align-items flex-start
					margin 0 15px
					justify-content space-between
				&_vendor-code
					width 100%
					margin 15px 0 0 0
				&_orders
					margin 0
			&_price
				width 85px
				flex-direction column
				justify-content space-between
				align-items flex-start
			&_total
				width 17%
				flex-direction column
				justify-content space-between
				align-items flex-start
				&_basket
					top 0
					bottom 0
					flex($ai: center)
					right 20px
			&_count
				width 120px
				&-title
					width 120px
					padding-left 10px
				&_basket
					width 120px
					flex-direction column
			&_text
				margin-bottom 0
				margin-top 10px
	
@media screen and (min-width $view-port-large)
	.basket
		&__container
			&_top
				padding-right 60px
		&__box
			padding-right 60px
			&__good-title
				margin-right 0