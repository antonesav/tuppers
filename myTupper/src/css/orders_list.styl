@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.orders
	line-height 1.3
	font-family 'TupperPRO', sans-serif !important
	&__list
		&_h1
			font-size 22px
			margin-bottom 25px

	&__table
		margin-bottom 40px
		flex(column)
		&_caption,&_line
			width 100%
			font-size 8px
			color $white-color
			background-color $main-color
			flex(row,space-around,center)
			padding 5px 0

		&_line
			padding 5px 3px
			color $black-color
			border-right 1px solid $light-color
			border-bottom 1px solid $light-color
			border-left 1px solid $light-color
			background-color $white-color
			&:hover
				background-color $snow-color

	&__caption,&__line
		&_item
			width 16%
			text-align center
			&:nth-child(4)
				margin-left 15px

	&__line
		&_item
			&:nth-child(2)
				link($orange-color)

	&__more
		text-transform uppercase
		text-decoration underline
		color $main-color
		text-align center
		font-weight 500
		cursor pointer
		font-size 12px

	&__aside
		margin-top 15px
		display none
		width 19%
		&_nav,&_current
			margin-bottom 45px
			& h2
				margin-bottom 15px
				text-transform uppercase
				color $pink-color
			& ul
				& li
					border-bottom 1px solid $light-color
					& a
						display block
						width 100%
						padding 10px 0

			& a
				link($black-color)
				&:hover
					color $orange-color
	&__scroll
		display none
.icon__arrow_products-scroll
	cursor pointer

@media screen and (min-width $view-port-mob)
	.orders
		&__table
			&_caption,&_line
				font-size 11px

@media screen and (min-width $view-port-medium)
	.orders
		&__table
			&_caption,&_line
				font-size 13px

@media screen and (min-width $view-port-tablet)
	.orders
		&__table
			&_caption,&_line
				font-size 16px
				padding 10px 0

		&__more
			display none

@media screen and (min-width $view-port-large)
	.orders
		flex(row-reverse,space-between)

		&__list
			width 79%

		&__aside
			display block
			width 19%

		&__caption
			&_item
				width 14%