@require 'partials/_params.styl'
@require 'partials/_mixins.styl'
.pformula
	font-family 'TupperPRO', sans-serif !important
	line-height 1.3
	&__aside
		width 25%
		display none
		& ul
			& li
				border-bottom 1px solid $light-color
				& a
					display block
					width 100%
					padding 15px 10px
					link($black-color)
					&:hover
						color $orange-color
	&__text
		&_item
			flex(column, $ai:center)
			& img
				margin-bottom 15px
			& ul
				margin-left 17px
				& li
					margin-bottom 15px
					color $disc-color
					list-style-type disc
					& span
						color $black-color
			& p
				width 100%
	&__image
		& img
			width 100%
	&__grey
		background-color $fill-color
		padding 25px
		& h3
			margin-bottom 15px
			color $main-color
			font-size 16px
	&__reverse
		&_txt
			& h3
				margin-bottom 15px
				color $main-color
				font-size 16px
		&_number
			flex(row,center)
			color $main-color
			font-size 40px
			font-weight 500
		&_h3
			display none
	&__info

		& a
			flex(row,center,center)
			link($orange-color)
			& p
				margin-left 15px
			&:hover
				text-decoration underline
	&__back
		& a
			link($orange-color)
			flex(row,center,center)
			&:hover
				text-decoration underline
		& p
			margin-right 15px
	&__hidden_h3
		flex(row,space-between,center)
		cursor pointer
		color $main-color


@media screen and (min-width $view-port-medium)
	.pformula
		&__reverse
			&_h3
				display block
		&__hidden_h3
			display none
@media screen and (min-width $view-port-large)
	.pformula
		flex(row,space-between)
		&__content
			width 74%
		&__aside
			display block
		&__wrapper
			flex(row,space-between)
		&__hidden_block
			flex(row-reverse,space-between)
		&__text
			width 49%
			&_item
				flex(row,space-between)
				& p
					margin-left 15px
				& img
					width 78px
					height 78px
		&__image
			width 49%
		&__reverse
			&_number
				flex(row,center,center)
