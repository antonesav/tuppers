@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.booklet-online
	font-family 'TupperPRO', sans-serif !important
	flex(row,space-between)
	&__wrap
		width 73%
	&__aside
		float left
		flex(column)
		width 25%
		&_item
			padding 15px 10px
			border-bottom 1px solid #E0E0E0
			font-size 16px
			cursor pointer
			transition .3s all
			&:hover
				color $orange-color
			&_active
				color $orange-color

	&__title
		font-size 28px
		margin-bottom 30px
	&__box
		flex(column)
		&_item
			flex()
			margin-bottom 80px
			&_img-wrapper
				flex($ai: center, $jc: flex-start)
				padding 0 5.5%
				width 50%
				&--inverse
					justify-content flex-end
			&_img
				width 100%
				max-width 280px
			&_line
				width 1px
				background-color #E0E0E0
			&_text
				line-height 1.3
				width 50%
				padding-left 7.5%
				flex(column, $jc: center)
				&--inverse
					padding-left 0
					padding-right 7.5%
			&_title
				font-size 20px
				text-transform uppercase
				color $red-color
				margin-bottom 25px
			&_p
				font-size 16px
				margin-bottom 25px
			&_buttons
				flex($ai:center)
			&_book
				margin-right 15px
			&_button
				background-color $main-color
				font-size 12px
				text-transform uppercase
				width 180px
				height 36px
				flex($jc:center, $ai:center)
				color $white-color
				cursor pointer
				transition .3s all
				&:hover
					background-color darken($main-color, 10%)
	&__modal
		font-family 'TupperPRO', sans-serif!important
		background-color #F7F8FC
		padding 30px 0 45px
		min-height 100vh
		width 100%
		position fixed
		z-index 100
		top 0
		left 0
		right 0
		//bottom 0
		&_wrapper
			height 100%
			width 100%
		&_top
			margin-bottom 45px
			flex($jc: space-between, $ai:center)
		&_logo
			width 180px
			&_img
				width 100%
		&_buttons
			width 100px
			flex($jc: space-between, $ai: center)
		&_search
			width 16%
			flex($jc: flex-end, $ai: center)
		&_slider
			width 100%
			&-wrapper
				width 100%
				flex($jc: center, $ai: center)
		&_content
			display flex!important
			justify-content center
			align-items center
			&_img
				width 84%
		&_pagination
			text-align center
			margin-top 30px

@media screen and (max-width $view-port-large)
	.booklet-online
		&__wrap
			width 100%
		&__title
			margin-top 20px
		&__aside
			&_item
				font-size 14px
		&__box
			&_item
				&_text
					padding-left 3.5%
					&--inverse
						padding-right 3.5%
				&_img-wrapper
					padding 0 3%

@media screen and (max-width $view-port-tablet)
	.booklet-online
		&__box
			&_item
				flex-direction column
				margin-bottom 50px
				&_title
					text-align center
				&_img-wrapper
					width 100%
					justify-content center!important
					margin-bottom 25px
					order 1
				&_text
					width 100%
					order 3
				&_buttons
					justify-content center
		&__modal
			&_content
				padding 0

@media screen and (max-width $view-port-medium)
	.booklet-online
		&__aside
			display none
		&__box
			&_item
				&:last-child
					margin-bottom 0

@media screen and (max-width $view-port-mob)
	.booklet-online
		&__modal
			&_top
				flex-direction column
			&_buttons
				margin-top 15px
			&_search
				width auto
				margin-top 15px