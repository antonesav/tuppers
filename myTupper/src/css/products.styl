@require 'partials/_params.styl'
@require 'partials/_mixins.styl'
.active-list
	color $orange-color
.inactive_products
	color #c4c4c4
	font-size 22px
.active_products
	color $main-color
	font-size 22px
.table
	& .results__main_catalog_item_wrapper
		flex(row,space-between)
		&-title
			width 60%
	& .icon__editor_products
		left: 0
	& .products__main_catalog_item, & .psteps__item
		flex(row,space-between,center)
		width 100%
		& img
			max-width 138px
			max-height 138px
		&_wrapper
			flex(column,flex-start)
			&-title
				flex(column-reverse,center,flex-start)
				& .products__main_catalog_item_title
					text-align left
		&_box
			flex(column,flex-start)
			text-align left
			margin-top 10px
			&-price
				flex(row,flex-start)
				flex-wrap wrap
				& span
					margin-top 0
					&:first-child
						margin-right 5px
			& span
				text-align left
				margin-top 0



.products
	flex($fd: row, $jc: space-between)
	line-height 1.3
	position relative
	font-family 'TupperPRO', sans-serif !important
	&__title
		font-size 22px
		margin-top 8px
	&__modal
		font-family 'TupperPRO'
		position fixed
		top 0
		left 0
		width 100%
		height 300px
		background-color #fff
		flex(column,space-between,center)
		z-index 1
		padding 10px 5px
		box-shadow 0 0 12px 0 rgba(0, 0, 0, 0.45)
		&_wrapper
			z-index 50
			position fixed
			
		&_basket
			text-transform uppercase
			margin-top 20px

		&_close
			position absolute
			font-weight 100
			color #979797
			right 5px
			top 0
			font-size 46px
			cursor pointer
			&:hover
				color $light-color

		&_title
			margin-top 20px
			flex(row,center)
			& img
				max-width 138px
				max-height 138px
			&_basket-icon
				flex(row, flex-start, center)
				& .icon__basket_products
					color $red-color
					margin 0 10px
				& span
					font-size 20px
					color $red-color
			&_description
				flex(column,space-around)
				& span
					margin-left 10px

		&_button
			background-color $main-color
			color $white-color
			& a
				link($white-color)
				display block
				height inherit
				padding 10px 23px
				cursor pointer
			&:hover
				background-color darken($main-color,15%)


	&__settings
		margin-top 27px
		flex(row, space-between, center)
		flex-wrap wrap
		&_modal
			position absolute
			top 0
			left 0
			background-color $white-color
			z-index 20
			display none
			padding 15px
			width 100%
			box-shadow 0 0 12px 0 rgba(0, 0, 0, 0.45)
			&_txt
				text-align center
				border-bottom 1px solid $light-color
				padding 15px 0
				text-transform uppercase
				font-size 18px
			&_close
				position absolute
				font-weight 100
				color #979797
				right 5px
				top 0
				font-size 38px
				cursor pointer
				&:hover
					color $light-color
			&_sorting
				cursor pointer
				font-size 18px
				text-transform uppercase
				position relative
				flex(column,space-between)
				padding 15px 0
				border-bottom 1px solid $light-color
				& .icon__arrow_products_modal-right
					position absolute
					top 20px
					right 0
				&:hover
					.icon__arrow_products_modal-right
						color $main-color
				& ul
					cursor pointer
					z-index 10
					margin-left 15px
					margin-top 15px
					& li
						font-size 16px
						text-transform none
						line-height 18px
						margin-bottom 10px

		&_view
			display flex
			width 50%
			&_layout
				width 64px
				height 22px
				flex(row, space-between)
				margin-right 20px
				& .active
					color $main-color
			&_arrows
				flex()
				width 68px
				height 23px
				border 1px solid $main-color
				border-radius 29.82px
				overflow hidden
				cursor pointer
				&_arrow-bottom
					flex($jc: center, $ai: center)
					text-align center
					width 34px
					height 21px
					border-right 1px solid #09B3AE
					&:hover
						.icon__arrow_products-bottom
							color $white-color
						background-color $main-color
				&_arrow-top
					flex($jc: center, $ai: center)
					text-align center
					width 34px
					height 21px
					&:hover
						background-color $main-color
						.icon__arrow_products-top
							color $white-color
		&_filter
			dispaly flex
			width 50%
			&_box
				display flex
				justify-content flex-end
				align-items center
				&_txt
					font-size 14px
					margin-right 16px
				&_icon
					width 21px
					height 24px
		&_result
			font-size 16px
			display flex
			margin-top 27px
			&_number
				margin-right 12px
			&_sorting
				display none
	&__main

		&_catalog
			margin-top 25px
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content space-between
			& :nth-child(9)
				display flex
			&_item
				display flex
				flex-direction column
				align-items center
				width 48%
				margin-bottom 40px
				position relative
				& .icon__editor_products
					display none
					position absolute
					top 0
					right 0
				&_wrapper
					flex(column,center,center)
					text-align center
				&_box
					flex(column,center,center)
				&_box-price
					flex(column,center,center)

				&_img
					width 100%
					&_discount, &_newcolor
						font-size 8px
						color #ffffff
						border-bottom 20px solid #FF7000
						border-left 11px solid transparent
						border-right 37px solid transparent
						height 0
						width 111px
						transform: rotate(-30deg)
						position absolute
						top 8px
						left -13px
						text-align center
						text-transform uppercase
						& p
							padding 5px 0 0 11px
					&_newcolor
						border-bottom 20px solid #36C73D
				&_vendor-code
					margin-top 15px
					font-size 13px
					color #787878
					text-align center
				&_title
					line-height 20px
					margin-top 12px
					font-size 16px
					text-align center
				&_your-price
					margin-top 14px
					font-size 18px
					text-align center
				&_price-color
					margin-top 5px
					font-size 18px
					color #E30385
					text-align center
				&_price
					margin-top 9px
					font-size 14px
					text-align center
				&_count
					width 130px
					margin 12px 4px 0 4px
					display flex
					justify-content space-between
					align-items center
					font-size 20px
					color #36C73D
					&_minus, &_plus
						border 1px solid #36C73D
						border-radius 50%
						height 28px
						width 28px
						display flex
						justify-content center
						align-items center
						cursor pointer
						padding-bottom 2px
						&:hover
							background-color: #36C73D
							color $white-color
				&_add-basket
					width 130px
					height 36px
					background-color $red-color
					margin 13px 4px 0 4px
					text-transform uppercase
					font-size 12px
					font-weight: 500
					color #ffffff
					display flex
					justify-content center
					align-items center
					cursor pointer
					transition .3s all
					&:hover
						background-color darken($red-color, 15%)
				&_condition
					padding 25px 20px
					width 135px
					background-color $icon-color
					text-transform uppercase
					font-size 12px
					font-weight 500
					position absolute
					bottom 0
					display none


		&_more
			margin-top 8px
			text-align center
			color $main-color
			font-weight 500
			font-size 12px
			text-transform uppercase
			cursor pointer
			&:hover
				text-decoration underline
		&_button-up
			flex($jc: center, $ai: center)
			background-color $main-color
			text-align center
			width 44px
			height 44px
			border-radius 50%
			position fixed
			bottom 21px
			right 10px
			cursor pointer
			z-index 20
			&:hover
				background-color darken($main-color,15%)
		&_scroll
			display none
			width 100%
			border-top 1px solid $light-color
			border-bottom 1px solid $light-color
			padding 30px 0
			&_pages
				flex(row, space-between, center)
				width 48%
				& .icon__arrow_products-scroll
					font-size 36px
					color $light-color
					&:hover
						color #999999
				& ul
					width 80%
					flex(row, space-between, center)
					& li
						font-size 16px
						color #999999
						margin 0 5px
						cursor pointer
						&:hover
							color $black-color
			&_txt
				font-size 16px
				width 40%
				cursor pointer
				flex(row, center, center)

				& span
					margin 0 10px
					font-weight 500
				&:hover
					.icon__arrow_products-scroll
						color $black-color

	&__aside
		width 25%
		display none
		&_nav
			width 100%
			&_list
				&_item
					display block
					padding 10px 10px
					border-bottom 1px solid $light-color
					link($black-color)
					&:hover
						color $orange-color
		&_filter
			background-color $white-color
			margin-top 36px
			flex(column, flex-start)
			&_icon
				display block !important
			&_button
				font-size 16px
				flex($ai: center, $jc: flex-start)
				& input[type='checkbox']
					width 68px
					height 30px
					border 1px solid $main-color
					transition .3s all
					outline none
					-webkit-appearance none
					-moz-appearance none
					appearance none
					border-radius 50px
					position relative
					flex($ai: center)
					cursor pointer
					&:checked
						background-color $main-color
						&:before
							left 40px
							background-color $white-color
					&:before
						content ''
						width 26px
						height 26px
						border-radius 50%
						background-color $main-color
						position absolute
						left 0
						transition .5s all
				& label[for='check']
					margin-left 20px
			& .products__aside_customer-price,
			& .products__aside_consultant-price
				margin-top 48px
				font-size 16px

				&_input
					margin-top 16px
					flex(column)
					&_field
						flex(row, space-between, center)
						& input
							width 110px
							height 35px
							text-align center
							outline none
							border 1px solid $main-color

					&_slider
						margin 0 auto

						&_bar
							margin-top 40px
							width 220px
							height 4px
							background-color $main-color
							position relative
							&_left
								width 22px
								height 22px
								position absolute
								border-radius 50%
								background-color $main-color
								top -9px
								left -11px
							&_right
								width 22px
								height 22px
								position absolute
								border-radius 50%
								background-color $main-color
								top -9px
								right -11px
		&_buttons
			margin-top 70px
			flex(row, space-between, center)
			font-size 12px
			text-transform uppercase
			&_show
				cursor pointer
				padding 10px 34px
				background-color $main-color
				color $white-color
				margin-right 10px
				&:hover
					background-color darken($main-color, 15%)
			&_reset
				flex(row, space-between, center)
				cursor pointer
				width 111px
				height 30px
				color $red-color
				&:hover
					color darken($red-color, 50%)
					& .products__aside_buttons_reset_circle
						border 1px solid darken($red-color, 50%)
						& span, :before
							background-color darken($red-color, 50%)
				&_circle
					width 29px
					height 29px
					border 1px solid $red-color
					border-radius 50%
					position relative
					& span
						width 1px
						height 15px
						background-color $red-color
						display block
						position absolute
						left 13px
						top 6px
						transform rotate(45deg)
						&:before
							content ''
							width 1px
							height 15px
							background-color $red-color
							display block
							transform rotate(-90deg)

@media screen and (min-width $view-port-mob)
	.products
		&__main
			&_catalog
				&_item
					width 40%
	.table
		& .products__main_catalog_item
			& img
				width auto
				height auto
				max-width 282px
				max-height 196px

@media screen and (min-width $view-port-medium)
	.products
		position relative
		&__modal
			width 48%
			position fixed
			top 1%
			right 1%
			left auto
		&__settings
			&_modal
				width 45%
				right 3%
				left auto
				top 3%
		&__main
			&_catalog
				justify-content center
				&_item
					width 32%
					&_box-price
						margin-top 15px
						flex(row,space-between,center)
					&_your-price
						margin 0
						margin-right 10px
						font-size 18px
						text-align center
					&_price-color
						margin 0
					&_title
						width 90%
	.table
		& .products__main_catalog_item
			flex(row,space-around)
			width 100%
			&_wrapper
				flex(row,flex-start)
				&-title
					flex(column-reverse,center,flex-start)
					& .products__main_catalog_item_title
						text-align left
			&_box
				flex(column,center)
				text-align left
				margin-top 10px
				& span
					text-align center
				&-price
					flex(row,center)
					flex-wrap wrap

@media screen and (min-width $view-port-tablet)
	.products
		position relative
		&__modal
			width 38%
			position fixed
			top 1%
			right 1%
			left auto
		&__aside
			&_filter
				display none
		&__main
			&_button-up
				display none
			&_catalog
				justify-content space-between
			&_scroll
				flex(row, space-between, center)
				&_item
					width 28%
			&_more
				display none
@media screen and (min-width $view-port-large)
	.products
		position relative
		&__modal
			width 30%
			position fixed
			top 1%
			right 1%
			left auto
		&__aside
			&_filter
				display block
		&__title
			width 73%
		&__settings
			flex(row-reverse, space-between, center)
			&_view
				flex(row-reverse, space-between, center)
				width 35%
			&_filter
				display none
			&_result
				margin auto 0
				&_sorting
					margin-left 10px
					flex($ai: center)
					&:hover
						.icon__arrow_products_result-bottom
							color $main-color
					& ul
						cursor pointer
						margin-left 10px
						height 18px
						overflow hidden
						z-index 10
						& li
							line-height 18px
							margin-bottom 10px
					& .sorting-open
						overflow visible
		&__main
			&_catalog
				justify-content space-between
				&_item
					width 28%
			&_more
				display none


















