@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.avangard
	line-height 1.3
	font-family 'TupperPRO', sans-serif !important
	&__aside
		margin-top 15px
		width 19%
		display none
		& ul
			& li
				border-bottom 1px solid $light-color
				& a
					display block
					width 100%
					padding 10px 0
					link($black-color)
					&:hover
						color $orange-color
	&__content
		& h1
			margin-bottom 30px
	&__index
		bg('../images/scale2.jpg')
		&_block
			margin-bottom 30px
		&_title
			flex(row,$ai:center)
			margin-bottom 15px
		&_marks
			flex(row,$ai:flex-end)
		&_green
			line-height 1
			font-size 24px
			font-weight 300
			color $orange-color
			margin-right 15px
		&_grey
			font-size 24px
			font-weight 300
			color #787878
		&_large
			font-size 18px
		&_select
			cursor pointer
			margin 0 10px
		&_small
			font-weight 300
			font-size 20px
			color $orange-color
			margin-left 15px
	&__progress
		margin 50px 0
		flex(row,center,center)
		&-wrapper
			height 250px
			width 275px
			margin 0 auto
		&_bar
			transform rotate(90deg)
			height 7px
			width 90%
			background-color #F0F1F5
			border-radius 10px
			position relative
			margin-top 100px

			&-fill
				display block
				height 7px
				background-color $main-color
				border-radius 10px
				transition width 500ms ease-in-out

		&_circle
			transform rotate(-90deg)
			position absolute
			width 33px
			height 33px
			background-color $main-color
			display block
			text-align center
			border-radius 50%
			background-image url('../images/apply.png')
			background-repeat no-repeat
			background-position center
			background-size 50%
			bottom -13px
			left 23%
			&:nth-of-type(2)
				left 48%
				background-color #F0F1F5
			&:nth-of-type(3)
				left 73%
				background-color #F0F1F5
			&:nth-of-type(4)
				left 98%
				background-color #F0F1F5
		&_text
			transform rotate(-90deg)
			position absolute
			font-weight 300
			font-size 20px
			color #787878
			bottom -90px
			left 81%
			&:nth-of-type(6)
				left 8%
				bottom 65px
				color $main-color
			&:nth-of-type(7)
				left 30%
				bottom -90px
			&:nth-of-type(8)
				left 63%
				bottom 50px
	&__back
		margin-top 25px
		flex(row,center,center)
		color $orange-color
		& a
			width 200px
			link($orange-color)
			flex(row,space-between,center)
			&:hover
				text-decoration underline

@media screen and (min-width $view-port-medium)
	.avangard
		&__index
			&_line
				flex(row)
				flex-wrap wrap
			&_block
				width 50%
		&__progress
			&-wrapper
				width 100%
				height 180px
				margin 20px 0
			&_bar
				transform rotate(0deg)
			&_circle
				transform rotate(0deg)
			&_text
				transform rotate(0deg)
				bottom -45px
				left 82%
				&:nth-of-type(6)
					left 9%
					bottom 33px
				&:nth-of-type(7)
					left 32%
					bottom -45px
				&:nth-of-type(8)
					left 62%
					bottom 33px
		&__back
			margin-top 25px
			flex(row,flex-end,center)

@media screen and (min-width $view-port-large)
	.avangard
		flex(row,space-between)
		&__aside
			display block
		&__content
			width 79%
		&__progress
			&_text
				font-size 24px
				bottom -45px
				left 84%
				&:nth-of-type(6)
					left 11%
					bottom 33px
				&:nth-of-type(7)
					left 34%
					bottom -45px
				&:nth-of-type(8)
					left 64%
					bottom 33px
@media screen and (min-width $view-port-xl)
	.avangard
		&__index
			&_block
				margin-bottom 50px
			&_green
				line-height 1
				font-size 64px
				font-weight 200
			&_grey
				font-size 64px
				font-weight 200
				color #787878
			&_small
				font-size 24px
			& .icon__medal_avangard
				font-size 60px