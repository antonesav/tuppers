@require 'partials/_params.styl'
@require 'partials/_mixins.styl'
.goods
	line-height 1.3
	padding-top 10px
	font-family 'TupperPRO', sans-serif !important

	&__content
		flex(column)

	&__title
		flex(row,space-between,center)
		& h1
			font-size 22px

	&__wrapper
		flex(row,space-between)
		overflow hidden
		margin-top 15px

	&__slider
		flex($jc: space-between)
		width 90%
		margin 40px 0

		&_box
			flex($ai: center, $jc: space-between)
			width 70%

	&__slide
		cursor pointer
		display flex !important
		flex-wrap nowrap
		flex-direction column
		align-items center
		text-align center

		&-item
			outline none
			border none
			&:focus
				outline none
				border none

		&_img
			width 100%
			height 100%

	&__slider-nav
		height 20vw
		width 20vw
		cursor pointer

		& .slick-center
			border 1px solid $icon-color !important
			outline none

		&_img
			border 1px solid #f2f2f2
			margin-bottom 5px
			&:focus
				outline none
				border none

	&__description
		font-size 16px
		flex(column)

		&_selling
			flex(row,space-between)

			&-txt
				text-align left

			&-numbers
				flex(column,flex-end,center)

		&_price
			margin-top 15px
			flex(column,space-between)

			&-your
				flex(row,space-between,center)

				& span
					color $red-color
					font-size 26px

			&-our
				flex(row,space-between,flex-end)
				margin-top 12px

		&_count
			margin-top 25px
			color $main-color
			flex(row,center,center)

			&_minus, &_plus
				border 1px solid $main-color
				border-radius 50%
				height 28px
				width 28px
				display flex
				justify-content center
				align-items center
				cursor pointer
				padding-bottom 2px
				margin 0 30px
				&:hover
					background-color: $main-color
					color $white-color

		&_button
			background-color $red-color
			margin 35px auto
			height 48px
			width 280px
			text-transform uppercase
			font-size 14px
			font-weight 500
			color #ffffff
			flex(row,center,center)
			cursor pointer
			transition .3s all
			&:hover
				background-color darken($red-color, 15%)

		&_wrapper-hidden
			display none

		&_contains
			text-align: center;
			background-color: #bdbdbd;
			color: #fff;
			text-transform: uppercase;
			padding: 10px 15px;

	&__tabs
		margin-top 35px
		padding-bottom 35px
		border-bottom 1px solid $light-color

		&_arrow
			position absolute
			width 20px
			height 0
			border-top 13px solid $main-color
			border-left 13px solid transparent
			border-right 13px solid transparent
			top 47px
			left 30px

		&_description,&_list,&_condition
			padding-top 15px
			flex($fd: column, $ai: flex-start)

			& h2
				margin-top 25px
				font-size 18px
				font-weight 500

			& h3
				margin-top 25px
				font-size 16px
				font-weight 500

			& p
				line-height 1.5

			& ul
				list-style-type disc
				margin 20px 0
				font-weight 500

				& li
					margin-top 20px
					margin-left 17px
					color #c4c4c4
					line-height 1.5

					& span
						color $black-color
						font-weight 400

		&_description,&_condition,&_list
			&_tab
				cursor pointer
				position relative
				margin-bottom 1px
				height 0
				border-bottom: 48px solid $main-color;
				border-right: 50px solid transparent
				width 100%
				color $white-color

				& p
					position absolute
					top 15px
					left 30px
	&__views
		font-size 22px
		width 90%
		flex($jc: space-between)

		&_wrapper
			text-align center
			margin-top 25px
			flex($ai: center, $jc: space-between)
			width 100%

			&-slider
				flex($fd: column,$ai: center, $jc: space-between)
				padding 25px 0
				font-size 28px
				text-align center

	&__view
		color $black-color
		width 100%
		display flex!important
		flex-direction column
		align-items center
		text-align center
		&:focus
			border none
			outline none

		&_img
			width: 100%
			height: 100%

		&_price
			color $red-color
			font-size 16px
			font-weight 500

		&_text
			width 85%
			font-size 14px

	.products__aside_filter
		display none

@media screen and (min-width $view-port-sm)
	.icon__arrow_back
		width 35px
		height 35px
		margin-right 15px
		cursor pointer

@media screen and (min-width $view-port-mob)
	.goods
		&__view
			&_text
				font-size 16px

		&__wrapper
			align-items space-between
			margin-top 15px

@media screen and (min-width $view-port-tablet)
	.icon__arrow_back
		display none
	.products__aside
		display block !important
		float left
		margin-right 5px

	.goods
		overflow hidden

		&__description
			&_button
				width 205px

		&__box
			flex(row,space-between,center)
			
		&__slider
			flex($jc: space-between)
			width 90%
			margin 40px 0
			
		&__slide
			display flex !important
			flex-wrap nowrap
			flex-direction column
			align-items center
			text-align center

		&__wrapper
			flex(column, $ai: center)
			margin-bottom 30px

		&__slider-nav
			height 30%
			width 100%
			margin-top 0

			& .slick-center
				border none
				outline none

			&_img
				border none
				&:focus
					outline none
					border none

@media screen and (min-width $view-port-large)
	.goods
		&__tabs
			& ul
				position relative
				
			&_description_tab, &_condition_tab, &_list_tab
				position absolute
				width 33%
				top -30px

			&_description_tab
				left 0

			&_condition_tab
				left 33%

			&_list_tab
				left 66%
		&__description
			&_button
				width 230px