@require 'partials/_params.styl'
@require 'partials/_mixins.styl'
.header

	font-family 'TupperPRO', sans-serif !important
	&__link
		display none
		link($orange-color)
		margin 0 15px
		&:hover
			text-decoration underline
.confirm
	margin-top 20px
	font-family 'TupperPRO', sans-serif !important
	line-height 1.3
	&__attention
		flex(column,center,center)
		&_p
			margin 20px 0
	&__content
		padding 25px
		background-color $fill-color
		& ul
			margin-left 17px
			& li
				color $disc-color
				list-style-type disc
				& span
					color $black-color
	&__square
		display block
		width 18px
		height 18px
		border 2px solid #787878
		text-align center
	&__checkbox
		width 250px
		flex()
		& input
			display none
		& p
			margin-left 15px
	&__button
		width 250px
		& a
			padding 10px 30px
			font-weight 500
			font-size 12px
			link($white-color)
			text-transform uppercase
			background-color $main-color
			&:hover
				background-color darken($main-color,15%)

@media screen and (min-width $view-port-tablet)
	.header
		&__link
			display block
		& .icon__logout_confirm
			display none
	.confirm
		&__attention
			margin-bottom 30px
			flex(row,flex-start,center)
			& p
				margin-left 25px
