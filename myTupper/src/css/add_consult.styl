@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.addcons
	line-height 1.3
	font-family 'TupperPRO', sans-serif !important
	&__aside
		margin-top 15px
		display none
		width 30%
		& ul
			& li
				border-bottom 1px solid $light-color
				& a
					display block
					width 100%
					padding 10px 0
					link($black-color)
					&:hover
						color $orange-color
	&__form_input_search
		top 8px
		right 5px
		width 20px
		height 20px
		cursor pointer
		position absolute
		background-color $white-color
		&:hover .icon__search_add-consult
			color darken($pink-color, 15%)
	&__button
		flex(row,center)
		& a
			background-color $main-color
			text-transform uppercase
			link($white-color)
			padding 8px 28px
			font-size 12px
			cursor pointer
			&:hover
				background-color darken($main-color, 15%)
	&__modal
		background-color rgba(0,0,0,0.6)
		font-family 'TupperPRO'
		line-height 1.3
		position fixed
		overflow auto
		z-index 100
		top 0
		left 0
		bottom 0
		right 0
		display none
		&_wrapper
			background-color $white-color
			position absolute
			padding 40px 10px
			width 90%
			max-height 100%
			top 3%
			left 50%
			bottom 3%
			overflow-y auto
			margin-left -45%
		&_header
			position relative
			flex(row,space-between,center)

		&_select
			flex(row,flex-start,center)
			font-size 14px
			width 30%
			&_span
				padding 0 10px
				cursor pointer
				flex(row,center,center)
				&:hover .icon__arrow_down
					color darken(#999, 35%)
				& span
					margin-right 10px
		&_search
			flex(row,space-between,center)
			position relative
			font-size 14px
			width 50%
			& input
				font-family 'TupperPRO'
				outline none
				border none
				border-bottom 1px solid #787878
				width 100%
				font-size 14px
				padding 3px 0
				line-height 15px
				transition .6s all
				&:focus
					border-bottom 1px solid $main-color
			& .icon__search_add-search
				position absolute
				right 0
				top 0
			&:hover .icon__search_add-search
				color darken($pink-color,35%)
		&_close
			top -35px
			right -15px
			height 22px
			padding 12px
			cursor pointer
			position absolute
			&:hover
				& span
					background-color darken(#979797, 35%)
					&:after
						background-color darken(#979797, 35%)
			& span
				height 2px
				width 22px
				display block
				transform rotate(45deg)
				background-color #979797
				&:after
					content ''
					height 2px
					width 22px
					display block
					transform rotate(-90deg)
					background-color #979797
		&_lines
			display none
		&_block
			margin-top 10px
			border 1px solid $light-color
		&_title
			background-color #F7F8FC
			text-align center
			position relative
			font-weight 500
			font-size 14px
			cursor pointer
			padding 10px
			& .icon__apply-green
				position absolute
				right 10px
				top 12px
		&_item
			flex(row)
			font-size 14px
			padding 10px 5px
			border-top 1px solid $light-color
			& p
				width 43%
			& span
				font-weight 500
			&:last-child
				border-bottom none
		&_footer
			flex(column,center,center)
	&__scroll
		flex(column,$ai:center)
		margin-top 30px
		&_p
			width 100%
			font-size 14px
		&_pages
			flex(row, space-between, center)
			width 100%
			& .icon__arrow_products-scroll
				font-size 36px
				color $light-color
				&:hover
					color #999999
			& ul
				width 80%
				flex(row, space-between, center)
				& li
					font-size 16px
					color #999999
					margin 0 5px
					cursor pointer
					&:hover
						color $black-color
		&_button
			& a
				background-color $orange-color
				text-transform uppercase
				link($white-color)
				font-size 12px
				padding 11px 38px
				&:hover
					background-color darken($orange-color, 15%)

	&__lines
		&_header
			padding 5px 0
			flex(row,flex-start,center)
			&_check
				cursor pointer
			&_item
				width 16%
				font-size 14px
				cursor pointer
				flex(row,flex-start,center)
				&:nth-child(2)
					width 8%
				& p
					margin-right 10px
		&_box
			border-bottom 1px solid $light-color
	&__line
		cursor pointer
		flex(row,flex-start,center)
		border-top 1px solid $light-color
		&:hover
			background-color $fill-color
		&_empty
			width 20px
			height 20px
			display block
		&_item
			width 16%
			padding 20px 0
			font-size 14px
			flex(row,flex-start,center)
			&:nth-child(2)
				width 8%




@media screen and (min-width $view-port-mob)
	.addcons
		&__form_box
			width 80%
			margin 0 auto

@media screen and (min-width $view-port-tablet)
	.addcons
		flex(row,space-between)
		&__form_box
			width 100%
			margin 0 auto
		&__content
			width 65%
		&__aside
			display block

@media screen and (min-width $view-port-large)
	.addcons
		&__content
			width 74%
		&__aside
			width 24%
		&__form
			flex(row,space-between,flex-end)
			flex-wrap wrap
		&__item
			width 32% !important
		&__button
			justify-content flex-end
		&__modal
			&_wrapper
				top 50%
				margin-top -210px
				bottom auto
				overflow hidden
			&_blocks
				display none
			&_lines
				display block
			&_footer
				flex(row-reverse,space-between,center)
			&_header
				justify-content flex-start
			&_select
				max-width 200px
				margin-right 50px
			&_search
				width auto
		&__scroll
			flex(row,space-between,center)
			width 60%
			& p
				width auto
			&_pages
				width 55%
@media screen and (min-width $view-port-xl)
	.addcons
		&__modal
			&_wrapper
				max-width 1100px
				margin-left -550px



