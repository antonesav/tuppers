@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.psteps
	font-family 'TupperPRO', sans-serif !important
	position relative
	&__item
		flex(column,space-between,center)
		width 100%
		margin-bottom 40px
		position relative
	&__grey
		background-color $icon-color
		padding 10px 5px
		text-align center
		margin-top 45px
		cursor pointer
		& p
			text-transform uppercase
			font-size 12px
			color $white-color
		&:hover
			background-color darken($icon-color,15%)
@media screen and (min-width $view-port-medium)
	.psteps
		&__item
			width 45%

@media screen and (min-width $view-port-tablet)
	.psteps
		&__item
			width 30%

@media screen and (min-width $view-port-large)
	.psteps
		flex(row,space-between)
		&__content
			width 73%
