@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.index
	font-family 'TupperPRO', sans-serif !important
	&__title
		text-transform uppercase
		font-weight 300
	&__slider-section
		padding-top 30px
		padding-bottom 40px
		flex(column, $ai: center)
	&__subtitle
		margin-bottom 20px
		font-weight 300
	&__slider
		font-weight 300
		width 90%
		flex($jc: space-between)
		//flex(column, $ai: center)
		&_wrapper
			flex($ai: center, $jc: space-between)
			width 100%
	&__slide
		display flex!important
		flex-direction column
		align-items center
		text-align center
		&:focus
			border none
			outline none
		&_img
			margin-bottom 10px
		&_price
			color $red-color
			margin-bottom 10px
			
	&__catalogs
		flex($jc: center)
		flex-wrap wrap
		width 100%
		&_item
			display block
			width 100%
			position relative
			link($black-color)
			&_img
				width 100%
				display block
			&_container
				position absolute
				right 0
				left 0
				bottom 30px
				flex($jc: center)
			&_title
				background-color $white-color
				padding 3% 6%
				border-radius 56px
				color $black-color
				text-transform uppercase
				line-height 1.3
				font-size 16px
				width fit-content

@media screen and (min-width $view-port-mob)
	.index
		&__slide
			padding-left 20px
			padding-right 20px
	
@media screen and (min-width $view-port-medium)
	.index
		&__catalogs
			&_item
				width 50%
				&_container
					right 20px
					justify-content flex-end
	
@media screen and (min-width $view-port-large)
	.index
		&__catalogs
			&_item
				&_title
					font-size 20px
	
@media screen and (min-width $view-port-xl)
	.index
		&__catalogs
			&_item
				&_title
					font-size 22px